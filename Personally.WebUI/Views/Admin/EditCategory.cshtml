@model CategoryModel
@{
    ViewData["Title"] = "CreateProduct";
}

<h1>Edit Category</h1>

<hr />

<div class="row">
    <div class="col-md-4">

        <form asp-controller="Admin" asp-action="EditCategory" method="post">
            <input type="hidden" name="categoryId" value="@Model.Id" />
            <div class="form-group row">
                <label asp-for="Title" class="col-md-2 col-form-label">  Name</label>
                <div class="col-md-10">
                    <input asp-for="Title" value="@Model.Title" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" value="" class="btn btn-primary"> Edit Category</button>
                </div>

            </div>


        </form>


    </div>


    
</div>