@model CategoryModel
@{
    ViewData["Title"] = "CreateProduct";
}

<div class="col-md-4">

    <form asp-controller="Admin" asp-action="EditCategory" method="post">
        <input type="hidden" name="categoryId" value="@Model.Id" />
        <div class="form-group row">
            <label asp-for="Title" class="col-md-2 col-form-label">  Name</label>
            <div class="col-md-10">
                <input asp-for="Title" value="@Model.Title" class="form-control" />
            </div>

        </div>

        <div class="form-group row">
            <div class="col-md-10 offset-md-2">
                <button type="submit" value="" class="btn btn-primary"> Edit Category</button>
            </div>

        </div>


    </form>

</div>

<div class="col-md-4">


    @if (Model.Notes.Count() > 0)
    {

        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width:30px;">Id</td>
                    <td style="width:100px;">Image</td>
                    <td>Title</td>
                    <td style="width:12px;">Description</td>
                    <td style="width:150px;"></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Notes)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <img src="~/img/@item.ImageUrl" width="80" />
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-primary btn-sm mr-2" href="/admin/EditNote/@item.Id">Edit</a>

                            <form action="/Admin/deletefromcategory" method="post">
                                <input type="hidden" name="noteId" value="@item.Id" />
                                <input type="hidden" name="categoryId" value="@Model.Id" />

                                <button type="submit" class="btn btn-danger"> Danger</button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    }
    else
    {
        <div class="alert alert-warning">
            <h4>No Products</h4>
        </div>
    }



</div>


